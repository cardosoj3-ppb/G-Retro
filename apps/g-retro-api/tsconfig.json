{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ],
  "extends": "@g-retro/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@gql-types": [
        "./src/generated/graphql-types"
      ]
    }
  }
}
