{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "extends": "@tsconfig/strictest/tsconfig.json",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "resolveJsonModule": true
  }
}
